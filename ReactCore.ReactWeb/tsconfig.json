{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./build",
    "lib": [
      "dom",
      "es6",
      "scripthost",
      "es2015.iterable"
    ],
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "plugins": [ { "name": "typescript-plugin-css-modules" } ],
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "build",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.*"
  ],
  "include": [
    "types/*",
    "src",
    "src/**/*",
    "src/**/**/*",
    "src/**/**/**/*"
  ],
  "files": [
    "app.tsx"
  ]
}